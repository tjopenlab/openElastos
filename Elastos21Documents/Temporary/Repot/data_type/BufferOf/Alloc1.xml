<manpage>
    
    
    <volume> 常用数据结构 </volume>
    <interface> BufferOf </interface>
    <method> Alloc </method>

    <description>
        <para> 动态创建(在堆上)BufferOf对象,并分别设置BufferOf数组、其长度和已使用长度。</para>
    </description>

    <syntax>
        <return_val> static BufferOf &lt;T &gt; * </return_val>
        <parameters>
        <api_param>
            <param_type> T *</param_type>
            <param_name> pBuf </param_name>
            <param_note>
                <para> 源T 类型数组 </para>
            </param_note>
        </api_param>
        <api_param>
            <param_type> Int32</param_type>
            <param_name> capacity </param_name>
            <param_note>
                <para> BufferOf数组元素个数 </para>
            </param_note>
        </api_param>
        <api_param>
            <param_type> Int32</param_type>
            <param_name> used </param_name>
            <param_note>
                <para> 待设置的BufferOf数组的使用数据空间长度，单位为sizeof(T) </para>
            </param_note>
        </api_param>
        </parameters>
    </syntax>

    <return>
        <para>返回BufferOf对象指针。</para>
    </return>

    <remarks>
       
    </remarks>

    

