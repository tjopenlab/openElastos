#include <elastos.h>
using namespace Elastos;

Int32 main()
{
    WStringBuf_<12> as;
    as.Copy(L"Hello,World!");
    WChar wch = as[0];
    CConsole::Write("This ch is: ");
    CConsole::WriteLine(wch);

    return 0;
}

//==========================================================================
//Output:This ch is: H
