<manpage>
    <sample url="sdk\operating_system\crt\libc\stdlib\_gcvt">_gcvt</sample>
    <title>_gcvt</title>
    <volume>C 运行库函数</volume>
    <routine_idx> slib_idx.htm </routine_idx>

    <description>
        <para>将小数转换为字符串。</para>
    </description>

    <syntax>
        <return_val>char *</return_val>
        <func_name>_gcvt</func_name>
        <parameters>
            <func_param>
                <param_type>double</param_type>
                <param_name>vaule</param_name>
                <param_note>
                    <para>要转化的小数</para>
                </param_note>
            </func_param>
            <func_param>
                <param_type>int</param_type>
                <param_name>digits</param_name>
                <param_note>
                    <para>保留位数</para>
                </param_note>
            </func_param>
            <func_param>
                <param_type> char *</param_type>
                <param_name>buffer</param_name>
                <param_note>
                    <para>获取的字符串</para>
                </param_note>
            </func_param>
        </parameters>
    </syntax>

    <return>
            返回字符串指针。
    </return>

    <remarks>

    </remarks>

    <requirements>
        <routine>
            <routine_name>_gcvt</routine_name>
            <headerfile>stdlib.h</headerfile>
            <compatibility>ANSI, Windows 2000, Elastos </compatibility>
        </routine>
    </requirements>
</manpage>