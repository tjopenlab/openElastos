    <volume>短信彩信引擎</volume>
    <interface> ISmsConfig </interface>
    <description>
        <para>
            提供对短信签名、发送报告、过期时间等选项的配置。
        </para>
    </description>
    <methods>
<self>
    <method>
        <method_name>GetSmsSaveMode</method_name>
        <method_url>..\interface\ISmsConfig\GetSmsSaveMode</method_url>
    <m_description>
            获取短信的存储模式。
    </m_description>
    </method>
    <method>
        <method_name>SetSmsSaveMode</method_name>
        <method_url>..\interface\ISmsConfig\SetSmsSaveMode</method_url>
    <m_description>
            设置短信的存储模式。
    </m_description>
    </method>
    <method>
        <method_name>GetSmsExpiry</method_name>
        <method_url>..\interface\ISmsConfig\GetSmsExpiry</method_url>
    <m_description>
            获取短信的过期时间。
    </m_description>
    </method>
    <method>
        <method_name>SetSmsExpiry</method_name>
        <method_url>..\interface\ISmsConfig\SetSmsExpiry</method_url>
    <m_description>
            设置短信的过期时间。
    </m_description>
    </method>
    <method>
        <method_name>GetReplyPathStatus</method_name>
        <method_url>..\interface\ISmsConfig\GetReplyPathStatus</method_url>
    <m_description>
            获取短信的回复路径状态。
    </m_description>
    </method>
    <method>
        <method_name>SetReplyPathStatus</method_name>
        <method_url>..\interface\ISmsConfig\SetReplyPathStatus</method_url>
    <m_description>
            设置短信的回复路径状态。
    </m_description>
    </method>
    <method>
        <method_name>GetSmsDeliveryReportStatus</method_name>
        <method_url>..\interface\ISmsConfig\GetSmsDeliveryReportStatus</method_url>
    <m_description>
            获取短信的发送报告状态。
    </m_description>
    </method>
    <method>
        <method_name>SetSmsDeliveryReportStatus</method_name>
        <method_url>..\interface\ISmsConfig\SetSmsDeliveryReportStatus</method_url>
    <m_description>
            设置短信的发送报告状态设置。
    </m_description>
    </method>
    <method>
        <method_name>GetAutoSignStatus</method_name>
        <method_url>..\interface\ISmsConfig\GetAutoSignStatus</method_url>
    <m_description>
            获取短信的签名档（短信、彩信公用）自动添加状态设置。
    </m_description>
    </method>
    <method>
        <method_name>SetAutoSignStatus</method_name>
        <method_url>..\interface\ISmsConfig\SetAutoSignStatus</method_url>
    <m_description>
            设置短信的签名档（短信、彩信公用）自动添加状态设置。
    </m_description>
    </method>
    <method>
        <method_name>GetSignature</method_name>
        <method_url>..\interface\ISmsConfig\GetSignature</method_url>
    <m_description>
            获取短信的签名档（短信、彩信公用）。
    </m_description>
    </method>
    <method>
        <method_name>SetSignature</method_name>
        <method_url>..\interface\ISmsConfig\SetSignature</method_url>
    <m_description>
            设置短信的签名档（短信、彩信公用）。
    </m_description>
    </method>
    <method>
        <method_name>GetSignatureSize</method_name>
        <method_url>..\interface\ISmsConfig\GetSignatureSize</method_url>
    <m_description>
            获取短信签名档（短信、彩信公用）的大小。
    </m_description>
    </method>
</self>
