<?xml version="1.0" encoding="GB2312"?>
    <?xml:stylesheet type="text/xsl" href="/xsl/xsl_c/interfaceman.xsl"?>    <manpage>
    <volume>照相摄像引擎模块</volume>
    <interface> ICamera </interface>
    <description>
        <para>
            照相摄像引擎接口
        </para>
    </description>
    <methods>
<self>
    <method>
        <method_name>SetDisplayArea</method_name>
        <method_url>..\interface\ICamera\SetDisplayArea</method_url>
    <m_description>
            设置取景窗口区域。
    </m_description>
    </method>
    <method>
        <method_name>EnableOverlay</method_name>
        <method_url>..\interface\ICamera\EnableOverlay</method_url>
    <m_description>
            启动overlay层。
    </m_description>
    </method>
    <method>
        <method_name>DisableOverlay</method_name>
        <method_url>..\interface\ICamera\DisableOverlay</method_url>
    <m_description>
            关闭overlay层。
    </m_description>
    </method>
    <method>
        <method_name>InitDrv</method_name>
        <method_url>..\interface\ICamera\InitDrv</method_url>
    <m_description>
            初始化camera驱动。
    </m_description>
    </method>
    <method>
        <method_name>DisposeDrv</method_name>
        <method_url>..\interface\ICamera\DisposeDrv</method_url>
    <m_description>
            卸载camera驱动。
    </m_description>
    </method>
    <method>
        <method_name>GetParam</method_name>
        <method_url>..\interface\ICamera\GetParam</method_url>
    <m_description>
            获取指定类型的照相机参数。
    </m_description>
    </method>
    <method>
        <method_name>SetParam</method_name>
        <method_url>..\interface\ICamera\SetParam</method_url>
    <m_description>
            设置指定类型的照相机参数。
    </m_description>
    </method>
    <method>
        <method_name>TakeSnapshots</method_name>
        <method_url>..\interface\ICamera\TakeSnapshots</method_url>
    <m_description>
            拍照，返回快照缓冲区指针和缓冲区大小。
    </m_description>
    </method>
    <method>
        <method_name>ReleaseFrameBuf</method_name>
        <method_url>..\interface\ICamera\ReleaseFrameBuf</method_url>
    <m_description>
            释放快照数据缓存。
    </m_description>
    </method>
    <method>
        <method_name>Start</method_name>
        <method_url>..\interface\ICamera\Start</method_url>
    <m_description>
            启动相机进入预览或摄像模式。
    </m_description>
    </method>
    <method>
        <method_name>Pause</method_name>
        <method_url>..\interface\ICamera\Pause</method_url>
    <m_description>
            摄像模式下暂停摄像。
    </m_description>
    </method>
    <method>
        <method_name>Resume</method_name>
        <method_url>..\interface\ICamera\Resume</method_url>
    <m_description>
            摄像模式暂停状态下继续摄像。
    </m_description>
    </method>
    <method>
        <method_name>Stop</method_name>
        <method_url>..\interface\ICamera\Stop</method_url>
    <m_description>
            退出照相/摄像模式。
    </m_description>
    </method>
</self>
    </methods>
    <requirements>
        <system>
            <system_name>
《Elastos 2.0》或更高版本            </system_name>
        </system>
        <headerfile>
            <file_name>camera.h</file_name>
        </headerfile>
        <library>
            <lib_name>elastos.lib，ElCRuntime.lib</lib_name>
        </library>
    </requirements>
    <remarks>
        <para>
            实现驱动的初始化、设置窗口区域、拍照、设置照相功能、获取照相参数、释放快照数据缓存、实现相机模式的切换（预览和摄像）。
        </para>
    </remarks>
</manpage>