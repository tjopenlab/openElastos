    <?xml:stylesheet type="text/xsl" href="/xsl/xsl_c/methodmanual.xsl"?><manpage>
<volume></volume>
<interface>ICanvas</interface><method> GradientFill </method>
    <description>
        <para>
            渐变风格的填充绘制。
        </para>
    </description>
    <syntax>
        <return_val> ECode </return_val>
        <parameters>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> int </param_type>
                <param_name> x </param_name>
                <param_note>
                    <para>
起始点x坐标                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> int </param_type>
                <param_name> y </param_name>
                <param_note>
                    <para>
起始点y坐标                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> int </param_type>
                <param_name> width </param_name>
                <param_note>
                    <para>
需要绘制的宽度                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> int </param_type>
                <param_name> height </param_name>
                <param_note>
                    <para>
需要绘制的高度                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> COLORREF </param_type>
                <param_name> basecolor </param_name>
                <param_note>
                    <para>
基准颜色                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> COLORREF </param_type>
                <param_name> edgecolor </param_name>
                <param_note>
                    <para>
编辑颜色                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> UInt8 </param_type>
                <param_name> alpha </param_name>
                <param_note>
                    <para>
表示0-255的alpha数据值                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> UInt32 </param_type>
                <param_name> style </param_name>
                <param_note>
                    <para>
风格样式                    </para>
                </param_note>
            </api_param>
        </parameters>
    </syntax>

<return>
    <para>
            如果方法调用成功，返回NOERROR。    </para>
</return>
    <requirements>
        <system>
            <system_name>
Elastos操作系统            </system_name>
        </system>
        <headerfile>
            <file_name>ElGrafix.h</file_name>
        </headerfile>
        <library>
            <lib_name>elastos.lib</lib_name>
        </library>
    </requirements>
    <remarks>
        <para>
            风格样式的取值指定为            <link url="../../datatype/GradientStyle.htm">            GradientStyle            </link>            数据类型。 </para><para>       本方法暂未实现。
        </para>
    </remarks>
</manpage>