<?xml version="1.0" encoding="GB2312"?>
    <?xml:stylesheet type="text/xsl" href="/xsl/xsl_c/methodmanual.xsl"?><manpage>
<volume></volume>
<interface>ICanvas</interface><method> DrawButtonControl </method>
    <description>
        <para>
            button控件的基本绘制操作，主要将button按下、抬起等不同状态下感观视图的相关绘制操作抽象
。
        </para>
    </description>
    <syntax>
        <return_val> void </return_val>
        <parameters>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> int </param_type>
                <param_name> left </param_name>
                <param_note>
                    <para>
button的左上角x坐标                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> int </param_type>
                <param_name> top </param_name>
                <param_note>
                    <para>
button的左上角y坐标                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> int </param_type>
                <param_name> right </param_name>
                <param_note>
                    <para>
button的右下角x坐标                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> int </param_type>
                <param_name> bottom </param_name>
                <param_note>
                    <para>
button的右下角y坐标                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> UInt32 </param_type>
                <param_name> uState </param_name>
                <param_note>
                    <para>
button被绘制的风格样式以及不同状态下的集合                    </para>
                </param_note>
            </api_param>
        </parameters>
    </syntax>

<return>
    <para>
            无    </para>
</return>
    <requirements>
        <system>
            <system_name>
Elastos操作系统            </system_name>
        </system>
        <headerfile>
            <file_name>ElGrafix.h</file_name>
        </headerfile>
        <library>
            <lib_name>elastos.lib</lib_name>
        </library>
    </requirements>
</manpage>