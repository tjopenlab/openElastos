<interface>IInputMethodEditor</interface><method> GetClientSize </method>
    <description>
        <para>
            获取输入法面板的大小。
        </para>
    </description>
    <syntax>
        <return_val> ECode </return_val>
        <parameters>
            <api_param>
                <param_inout>[out]</param_inout>
                <param_type> Int32 * </param_type>
                <param_name> width </param_name>
                <param_note>
                    <para>
面板的宽。                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_inout>[out]</param_inout>
                <param_type> Int32 * </param_type>
                <param_name> height </param_name>
                <param_note>
                    <para>
面板的高。              </para>
                </param_note>
            </api_param>
       </parameters>
    </syntax>

<return>
    <para>
            如果方法调用成功，则返回NOERROR。    </para>
</return>
    <requirements>
        <system>
            <system_name>
Elastos操作系统             </system_name>
        </system>
        <headerfile>
            <file_name>ElControls.h</file_name>
        </headerfile>
        <library>
            <lib_name>elastos.lib </lib_name>
        </library>
    </requirements>
</manpage>