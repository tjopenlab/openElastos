<?xml version = "1.0" encoding="GB2312" ?>
<?xml:stylesheet type="text/xsl" href="/xsl/xsl_c/shellmanual.xsl"?>

<manpage>
    <title> gdb 工具</title>
    <volume>XDK常用工具</volume>

    <description>
        <para> 该命令用于启动GDB调试器，命令格式：</para>
    </description>

    <syntax>
        <cmd_name>gdb</cmd_name>
        <cmd_param>[-?][program[args]][--help] [/?]</cmd_param>
    </syntax>
    <parameters>
    <param>
        <param_name> -?  </param_name>
        <param_note> 显示帮助信息 </param_note>
    </param>
    <param>
        <param_name> 无参数  </param_name>
        <param_note> 调试远程Elastos程序 </param_note>
    </param>
    <param>
        <param_name> program[args]  </param_name>
        <param_note> 调试本地程序 </param_note>
    </param>
    <param>
        <param_name> --help  </param_name>
        <param_note> 显示gdb用法 </param_note>
    </param>
    <param>
        <param_name> /?  </param_name>
        <param_note> 显示帮助信息 </param_note>
    </param>
    </parameters>

</manpage>