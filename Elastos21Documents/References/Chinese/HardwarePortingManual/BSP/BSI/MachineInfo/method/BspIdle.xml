<manpage>
    <volume>机器操作相关函数</volume>
    <title>BspIdle</title>
    <routine_idx> ../method.htm </routine_idx>

    <description>
        <para>使机器进入空闲状态。</para>
    </description>

    <syntax_nopara>
        <return_val>void</return_val>
        <NoArguments/>
    </syntax_nopara>

	<return>
	    <NoReturnValue/>
    </return>

    <remarks>
        <para>内核将调用本函数使机器进入空闲状态。</para>
    </remarks>

    <requirements>
        <system>
            <system_name>
                《Elastos2.0》或更高版本
            </system_name>
        </system>
        <headerfile>
            <file_name> ddk.h </file_name>
        </headerfile>
    </requirements>
    <references>
        <reference>
            <ref_name>BspReboot</ref_name>
            <ref_url>BspReboot</ref_url>
        </reference>
        <reference>
            <ref_name>BspHalt</ref_name>
            <ref_url>BspHalt</ref_url>
        </reference>
    </references>

</manpage>
