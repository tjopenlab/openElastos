<manpage>
    <interface> DzDmaChannel </interface>
    <description>
        <para>
            DMA通道类，使用<link url="method\DzRequestDmaChannel.htm">DzRequestDmaChannel</link>获取一个DmaChannel类的对象的指针。
        </para>
    </description>
    <methods>
<self>
    <method>
    <method_name>RequestTransfer</method_name>
        <method_url>DzDmaChannel\RequestTransfer</method_url>
    <m_description>
        请求并设置一次DMA传输(设备与内存之间)
    </m_description>
    </method>

    <method>
    <method_name>RequestTransfer</method_name>
        <method_url>DzDmaChannel\RequestTransfer2</method_url>
    <m_description>
        请求并设置一次DMA传输(内存与内存之间)
    </m_description>
    </method>

    <method>
    <method_name>GetTransferResidue</method_name>
        <method_url>DzDmaChannel\GetTransferResidue</method_url>
    <m_description>
        获取当前传输事务剩下的传输量
    </m_description>
    </method>

    <method>
    <method_name>Release</method_name>
        <method_url>DzDmaChannel\Release</method_url>
    <m_description>
        释放占用的DMA通道
    </m_description>
    </method>
</self>
    </methods>
    <requirements>
        <system>
            <system_name>
                Elastos操作系统
            </system_name>
        </system>
        <headerfile>
            <file_name> dma.h </file_name>
        </headerfile>
    </requirements>
    <references>
