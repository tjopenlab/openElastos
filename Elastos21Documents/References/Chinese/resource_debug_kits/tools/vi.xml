<?xml version = "1.0" encoding="GB2312" ?>
<?xml:stylesheet type="text/xsl" href="/xsl/xsl_c/shellmanual.xsl"?>

<manpage>
    <title> vi </title>
    <volume>Elastos常用工具</volume>

    <description>
        <para> 文本编辑器。详细情况请参阅vi有关文档。</para>
    </description>

    <syntax>
        <cmd_name> VI </cmd_name>
        <cmd_param> filename </cmd_param>
    </syntax>
    <parameters>
    <param>
        <param_name>  filename  </param_name>
        <param_note>所要编辑的文件名</param_note>
    </param>
    </parameters>

    <examples>
    <example>
        <eg_line>vi file.txt  </eg_line>
        <eg_note> 编辑文件file.txt。如果该文件不存在则创建它。</eg_note>
    </example>
    </examples>
</manpage>