    <?xml version = "1.0" encoding="GB2312" ?>
    <?xml:stylesheet type="text/xsl" href="/xsl/xsl_c/interfaceman.xsl"?>    <manpage>
    <volume>照相摄像</volume>
    <interface> ICamera </interface>
    <description>
        <para>
            照相摄像接口
        </para>
    </description>
    <methods>
<self>
    <method>
        <method_name>GetParam</method_name>
        <method_url>..\interface\ICamera\GetParam</method_url>
    <m_description>
        获取指定类型的照相机参数
    </m_description>
    </method>
    <method>
        <method_name>SetParam</method_name>
        <method_url>..\interface\ICamera\SetParam</method_url>
    <m_description>
        设置指定类型的照相机参数
    </m_description>
    </method>
    <method>
        <method_name>GetMode</method_name>
        <method_url>..\interface\ICamera\GetMode</method_url>
    <m_description>
        获取当前相机模式（照相/摄像）
    </m_description>
    </method>
    <method>
        <method_name>GetFrameSize</method_name>
        <method_url>..\interface\ICamera\GetFrameSize</method_url>
    <m_description>
        获取帧大小
    </m_description>
    </method>
    <method>
        <method_name>GetFrame</method_name>
        <method_url>..\interface\ICamera\GetFrame</method_url>
    <m_description>
        获取存放帧数据buffer的指针及帧Id（照相则表示拍照张数），
        当引擎数据帧准备好时会通过回调通知上层用户调用此函数取帧。
    </m_description>
    </method>
    <method>
        <method_name>Preview</method_name>
        <method_url>..\interface\ICamera\Preview</method_url>
    <m_description>
        进入预览
    </m_description>
    </method>
    <method>
        <method_name>TakeSnapshots</method_name>
        <method_url>..\interface\ICamera\TakeSnapshots</method_url>
    <m_description>
        拍照
    </m_description>
    </method>
    <method>
        <method_name>RecordVideo</method_name>
        <method_url>..\interface\ICamera\RecordVideo</method_url>
    <m_description>
        摄像
    </m_description>
    </method>
    <method>
        <method_name>ReleaseFrameBuf</method_name>
        <method_url>..\interface\ICamera\ReleaseFrameBuf</method_url>
    <m_description>
        释放快照数据缓存。
        建议：照相数据不再使用时调用此函数进行内存空间的回收。
    </m_description>
    </method>
    <method>
        <method_name>Start</method_name>
        <method_url>..\interface\ICamera\Start</method_url>
    <m_description>
        启动相机进入照相或摄像模式
    </m_description>
    </method>
    <method>
        <method_name>Pause</method_name>
        <method_url>..\interface\ICamera\Pause</method_url>
    <m_description>
        摄像模式下暂停摄像（未实现）
    </m_description>
    </method>
    <method>
        <method_name>Resume</method_name>
        <method_url>..\interface\ICamera\Resume</method_url>
    <m_description>
        摄像模式下重新摄像（未实现）
    </m_description>
    </method>
    <method>
        <method_name>Stop</method_name>
        <method_url>..\interface\ICamera\Stop</method_url>
    <m_description>
        停止摄像或预览（拍照过程无法中断，拍照时调用此函数将返回失败）
    </m_description>
    </method>
</self>
    </methods>
    <requirements>
        <system>
            <system_name>
《和欣 2.0》或更高版本            </system_name>
        </system>
    </requirements>
</manpage>