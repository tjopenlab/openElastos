    <?xml version = "1.0" encoding="GB2312" ?>
    <?xml:stylesheet type="text/xsl" href="/xsl/xsl_c/methodmanual.xsl"?><manpage>
<volume>媒体中心引擎</volume>
<interface>IMediaDevMgr</interface><method> SetSpeaker </method>
    <description>
        <para>
           设置使用哪个扬声器。扬声器包括主扬声器和耳机。
        </para>
    </description>
    <syntax>
        <return_val> ECode </return_val>
        <parameters>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> enum AudioSpeaker </param_type>
                <param_name> eSpeaker </param_name>
                <param_note>
                    <para>
                      为<link url="../../DataType/AudioSpeaker.htm">AudioSpeaker</link>枚举类型，用于表示需要设置的扬声器
                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> BOOL </param_type>
                <param_name> bOpen </param_name>
                <param_note>
                    <para>
                      开启或者关闭扬声器。为TRUE表示开启扬声器；为FALSE表示关闭扬声器
                    </para>
                </param_note>
            </api_param>
        </parameters>
    </syntax>
     <return>
	    <table>
	        <th>
	    	    <td>返回值 </td>
	    	    <td>描述</td>
	        </th>
	        <tr>
	    	    <td>NOERROR</td>
	    	    <td>程序执行成功</td>
	        </tr>
	        <tr>
	    	    <td>E_INVALID_ARGUMENT </td>
	    	    <td>参数错误</td>
	        </tr>
	        <tr>
	    	    <td>驱动错误码</td>
	    	    <td>调用声卡驱动失败</td>
	        </tr>
	    </table>
	    <para>参见<link url="../../../../../QuickReference/ECode.htm">ECode</link>和<link url="../../MediaCenter_Error.htm">MediaCenter_Error</link>相关帮助。</para>
    </return>
    <requirements>
        <system>
            <system_name>
《和欣 2.0》或更高版本            </system_name>
        </system>

    </requirements>
</manpage>