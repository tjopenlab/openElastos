<interface>IConnMgr</interface><method> GetConnectionStatistics </method>
    <description>
        <para>
           统计数据流量
        </para>
    </description>
    <syntax>
        <return_val> ECode </return_val>
        <parameters>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> HANDLE </param_type>
                <param_name> connHandle </param_name>
                <param_note>
                    <para>
                       连接句柄
                    </para>
                </param_note>
            </api_param>
        </parameters>
        <parameters>
            <api_param>
                <param_inout>[out]</param_inout>
                <param_type> PDWORD </param_type>
                <param_name> dataIn </param_name>
                <param_note>
                    <para>
                       指向DWORD类型的指针，用于表示接收数据的大小，单位为字节
                    </para>
                </param_note>
            </api_param>
        </parameters>
        <parameters>
            <api_param>
                <param_inout>[out]</param_inout>
                <param_type> PDWORD </param_type>
                <param_name> dataOut </param_name>
                <param_note>
                    <para>
                       指向DWORD类型的指针，用于表示发送数据的大小，单位为字节
                    </para>
                </param_note>
            </api_param>
        </parameters>
    </syntax>

<return>
	    <table>
	        <th>
	    	    <td>返回值 </td>
	    	    <td>描述</td>
	        </th>
	        <tr>
	    	    <td>NOERROR</td>
	    	    <td>方法调用成功</td>
	        </tr>
	        <tr>
	    	    <td>E_INVALID_ARGUMENT</td>
	    	    <td>参数错误</td>
	        </tr>
	    </table>
</return>

    <requirements>
        <system>
            <system_name>
《和欣 2.1》或更高版本            </system_name>
        </system>
    </requirements>
