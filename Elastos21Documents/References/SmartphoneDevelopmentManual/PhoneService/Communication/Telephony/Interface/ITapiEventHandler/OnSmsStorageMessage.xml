<volume>通讯引擎</volume>
<interface>ITapiEventHandler</interface><method> OnSmsStorageMessage </method>
    <description>
        <para>
          存储于SIM卡等存储器短消息状态提示事件。
        </para>
    </description>
    <syntax>
        <return_val> ECode </return_val>
        <parameters>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> INT </param_type>
                <param_name> nStorage </param_name>
                <param_note>
                    <para>
                      存储的短信息状态
                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> INT </param_type>
                <param_name> nIdx </param_name>
                <param_note>
                    <para>
                      索引号
                    </para>
                </param_note>
            </api_param>
        </parameters>
    </syntax>

    <requirements>
        <system>
            <system_name>
《和欣 2.0》或更高版本            </system_name>
        </system>
        <headerfile>
            <file_name>elastos.h, stdio.h, stdlib.h, CTelephony.h </file_name>
        </headerfile>
        <library>
            <lib_name>elastos.lib, elacrt.lib, elautil.lib, _atspec.lib, _atcommon.lib</lib_name>
        </library>
    </requirements>
</manpage>