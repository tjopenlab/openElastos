    <?xml version = "1.0" encoding="GB2312" ?>
    <?xml:stylesheet type="text/xsl" href="/xsl/xsl_c/methodmanual.xsl"?><manpage>
<volume>通讯引擎</volume>
<interface>ITapiEventHandler</interface><method> OnSmsMessage </method>
    <description>
        <para>
          收到短信（原始PDU数据格式，收到后需要调用相关API解码）提示事件。
        </para>
    </description>
    <syntax>
        <return_val> ECode </return_val>
        <parameters>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> INT </param_type>
                <param_name> nSmsType </param_name>
                <param_note>
                    <para>
                        短信的类型
                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> EzByteBuf </param_type>
                <param_name> ebMessage </param_name>
                <param_note>
                    <para>
                      短信内容数据（为原始数据，需要调用相应的Decode API）
                    </para>
                </param_note>
            </api_param>
        </parameters>
    </syntax>
    <remarks>
      <para>
        nSmsType为SmsMessage表示SMS短信;为SmsStatusReport表示短信状态报告;为CbmMessage表示广播信息。
      </para>
    </remarks>

    <requirements>
        <system>
            <system_name>
《和欣 2.0》或更高版本            </system_name>
        </system>
        <headerfile>
            <file_name>elastos.h, stdio.h, stdlib.h, CTelephony.h </file_name>
        </headerfile>
        <library>
            <lib_name>elastos.lib, elacrt.lib, elautil.lib, _atspec.lib, _atcommon.lib</lib_name>
        </library>
    </requirements>
</manpage>