<manpage>
    <volume>Machine Operation Related Methods</volume>
    <title>Halt</title>
    <routine_idx> ../method.htm </routine_idx>

    <description>
        <para>Makes the machine to stop running.</para>
    </description>

    <syntax_nopara>
        <return_val>void</return_val>
        <NoArguments/>
    </syntax_nopara>

	<return>
	    <NoReturnValue/>
    </return>

    <remarks>
        <para>The kernel invokes this method to make the machine stop running.</para>
    </remarks>

    <requirements>
        <system>
            <system_name>
                Elastos 2.0 or later.
            </system_name>
        </system>
        <headerfile>
            <file_name> ddk.h </file_name>
        </headerfile>
    </requirements>
    <references>
        <reference>
            <ref_name>Reboot</ref_name>
            <ref_url>Reboot</ref_url>
        </reference>
        <reference>
            <ref_name>Idle</ref_name>
            <ref_url>Idle</ref_url>
        </reference>
    </references>

</manpage>
 