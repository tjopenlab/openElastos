<manpage>
    <volume>Interrupt Controller Method</volume>
    <title>MaskIrqs</title>
    <routine_idx> ../method.htm </routine_idx>

    <description>
        <para>Mask or activate one or more interrupt requests.</para>
    </description>

    <syntax>
        <return_val>void</return_val>
        <parameters>
            <api_param>
                <param_type> irqs_t</param_type>
                <param_name> irqs</param_name>
                <param_note>
                    <para>Set of all specified interrupt request that need to be masked or activated, it consists of corresponding interrupt number.</para>
                </param_note>
            </api_param>
            <api_param>
                <param_type> bool_t</param_type>
                <param_name> bEnable </param_name>
                <param_note>
                    <para>Specifies if mask or activate the interrupt request.If TRUE, activates specified interrupt request.If FALSE, then mask specified interrupt request.</para>
                </param_note>
            </api_param>
        </parameters>
    </syntax>

	<return>
	    <NoReturnValue/>
    </return>

    <remarks>
        <para>This method is used to mask or activate one or more interrupt requests.</para>
    </remarks>

    <requirements>
        <system>
            <system_name>
                Elastos 2.0 or later.
            </system_name>
        </system>
        <headerfile>
            <file_name> ddk.h </file_name>
        </headerfile>
    </requirements>
    <references>
        <reference>
            <ref_name>AcknowledgeIrq</ref_name>
            <ref_url>AcknowledgeIrq</ref_url>
        </reference>
        <reference>
            <ref_name>GetIrqs</ref_name>
            <ref_url>GetIrqs</ref_url>
        </reference>
        <reference>
            <ref_name>MaskAllIrqs</ref_name>
            <ref_url>MaskAllIrqs</ref_url>
        </reference>
    </references>

</manpage>
  