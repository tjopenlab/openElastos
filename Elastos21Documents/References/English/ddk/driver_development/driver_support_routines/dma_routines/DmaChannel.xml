<?xml version = "1.0" encoding="GB2312" ?>
<?xml:stylesheet type="text/xsl" href="/xsl/xsl_e/interfaceman.xsl"?>
<manpage>
    <interface> DmaChannel </interface>
    <description>
        <para>
            DMA channel class, gets a DmaChannel class object pointer by using <link url="method\RequestDmaChannel.htm">RequestDmaChannel</link>.</para>
    </description>
    <methods>
<self>
    <method>
    <method_name>RequestTransfer</method_name>
        <method_url>DmaChannel\RequestTransfer</method_url>
    <m_description>
        Requests and sets up a DMA transfer (between device and memory).
    </m_description>
    </method>

    <method>
    <method_name>RequestTransfer</method_name>
        <method_url>DmaChannel\RequestTransfer2</method_url>
    <m_description>
        Requests and sets up a DMA transfer (between memories).
    </m_description>
    </method>

    <method>
    <method_name>GetTransferResidue</method_name>
        <method_url>DmaChannel\GetTransferResidue</method_url>
    <m_description>
        Gets the remaining transfer of the current transfer transaction.
    </m_description>
    </method>

    <method>
    <method_name>Release</method_name>
        <method_url>DmaChannel\Release</method_url>
    <m_description>
        Releases occupied DMA channel.
    </m_description>
    </method>
</self>
    </methods>
    <requirements>
        <system>
            <system_name>
				Elastos 2.0 or later.
			</system_name>
        </system>
        <headerfile>
            <file_name> dma.h </file_name>
        </headerfile>
    </requirements>
    <references>
        <reference>
            <ref_name>RequestDmaChannel</ref_name>
            <ref_url>method\RequestDmaChannel</ref_url>
        </reference>
    </references>
</manpage>
