<?xml version = "1.0" encoding="GB2312" ?>
<?xml:stylesheet type="text/xsl" href="/xsl/xsl_e/methodmanual.xsl"?><manpage>
<volume>DMA Routines</volume>
<interface>DmaChannel</interface><method> RequestTransfer </method>
    <description>
        <para>
            Requests and sets up a DMA transfer (between device and memory).
        </para>
    </description>
    <syntax>
        <return_val> ECODE </return_val>
        <parameters>
            <api_param>
                <param_type> DmaTransferMode </param_type>
                <param_name> mode </param_name>
                <param_note>
                    <para>
                        DMA channel transfer mode.
                    </para>
                </param_note>
            </api_param>

			<api_param>
                <param_type> virtaddr_t </param_type>
                <param_name> vaBuffer </param_name>
                <param_note>
                    <para>
                        Virtual address used for DMA channel transfer.
                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_type> uint32_t </param_type>
                <param_name> uLength </param_name>
                <param_note>
                    <para>
                        Transfered data length, in bytes.
                    </para>
                </param_note>
            </api_param>
        </parameters>
    </syntax>

	<return>
	    <table>
	    <th>
		<td>Return Value </td>
		<td>Hex Value</td>
		<td>Description</td>
	    </th>
	    <tr>
		<td>S_OK</td>
		<td>0x00000000</td>
		<td>Successfully set DMA transfer transaction.</td>
	    </tr>
	    <tr>
		<td>E_FAIL</td>
		<td>0x80004005</td>
		<td>DMA transfer mode not applicable.</td>
	    </tr>
	</table>
    </return>

	<remarks>
		<para>
            This method requests and sets up a DMA transfer between device and memory.
		</para>
	</remarks>

    <requirements>
        <system>
            <system_name>
				Elastos 2.0 or later.
			</system_name>
        </system>
    </requirements>
</manpage>