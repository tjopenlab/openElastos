<?xml version = "1.0" encoding="GB2312" ?>
<?xml:stylesheet type="text/xsl" href="/xsl/xsl_e/apimanual.xsl"?>

<manpage>
	<sample url="dma_routines\RequestDmaChannel">RequestDmaChannel</sample>
	<volume>DMA Routines</volume>
	<title>RequestDmaChannel</title>
	<routine_idx> ../../dma_routines.htm </routine_idx>
	
	<description>
		<para>Apply for a specified Dma channel.</para>
	</description>
	
	<syntax>
		<return_val>ECODE </return_val>
		<parameters>
			<api_param>
				<param_type> uint_t </param_type>
				<param_name> uNo </param_name>
				<param_note>
					<para>Specified DMA channel number.</para>
				</param_note>
			</api_param>
			<api_param>
				<param_type> DmaChannel ** </param_type>
				<param_name> ppDmaChannel </param_name>
				<param_note>
					<para>Pointer to DMA channel object DmaChannel.</para>
				</param_note>
			</api_param>
		</parameters>
	</syntax>
	
	<return>
		<table>
			<th>
				<td>Return Values</td>
				<td>Hex Value</td>
				<td>Description</td>
			</th>
			<tr>
				<td>S_OK</td>
				<td>0x00000000</td>
				<td>Application for specified DMA channel successful.</td>
			</tr>
			<tr>
				<td>ELADRV_E_DMAC_NOT_FOUND</td>
				<td>0x80401005</td>
				<td>System does not support DMA</td>
			</tr>
			<tr>
				<td>E_INVALIDARG</td>
				<td>0x80070057</td>
				<td>Applied channel number is illegal.</td>
			</tr>
			<tr>
				<td>ELADRV_E_BUSY</td>
				<td>0x80401004</td>
				<td>Applied channel number is busy.</td>
			</tr>
			
		</table>
	</return>
	
	<remarks>
		<para> This function requests the system for a DMA channel, and assign pointer to <link url="..\DmaChannel.htm">DmaChannel</link> class to ppDmaChannel.</para>
	</remarks>
	
	<requirements>
		<system>
			<system_name>
				Elastos 2.0 or later.
			</system_name>
		</system>
		<headerfile>
			<file_name>dma.h</file_name>
		</headerfile>
	</requirements>
	
	<references>
		<reference>
			<ref_name>DmaChannel</ref_name>
			<ref_url>..\DmaChannel</ref_url>
		</reference>
	</references>
	
</manpage>