			<ref_name>FreeDmaPage</ref_name>
			<ref_url>FreeDmaPage</ref_url>
		</reference>
		<reference>
			<ref_name>FreeDmaPages</ref_name>
			<ref_url>FreeDmaPages</ref_url>
		</reference>
	</references>
</manpage>