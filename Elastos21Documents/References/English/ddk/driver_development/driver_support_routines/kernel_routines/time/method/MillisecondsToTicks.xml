<manpage>
    <sample url="time\MillisecondsToTicks">MillisecondsToTicks</sample>
    <volume>Time</volume>
    <title>MillisecondsToTicks</title>
    <routine_idx> ../../time.htm </routine_idx>

    <description>
        <para>
        	Converts the time from number of milliseconds to equivalent number of ticks.
        </para>
    </description>

    <syntax>
        <return_val>uint_t</return_val>
        <parameters>
            <api_param>
            	<param_inout>[in]</param_inout>
                <param_type> uint_t</param_type>
                <param_name> uMilliseconds </param_name>
                <param_note>
                    <para>
                    	Time to be converted in milliseconds.
                    </para>
                </param_note>
            </api_param>
        </parameters>
    </syntax>

    <return>
    	<para>
    		The time in ticks.
    	</para>
    </return>

    <remarks>
        <para>
        	This method converts time in number of milliseconds to equivalent time in number of ticks. The unit of
        	tick varies on different systems. Usually, the unit of tick is greater than or equal to the 
        	unit of millisecond. If unit of tick is greater than the unit of millisecond, it is possible for the 
        	converted time to loose precision. This method uses the ceiling algorithm to convert specified time.
        </para>
    </remarks>

    <requirements>
        <system>
            <system_name>
                Elastos 2.0 or later
            </system_name>
        </system>
        <headerfile>
            <file_name> ddk.h </file_name>
        </headerfile>
    </requirements>

    <references>
        <reference>
            <ref_name>TicksToMilliseconds</ref_name>
            <ref_url>TicksToMilliseconds</ref_url>
        </reference>
    </references>


</manpage>
