<manpage>
    <sample url="memory_management\AllocKernelPage">AllocKernelPage</sample>
    <volume>Memory Management Methods</volume>
    <title>AllocKernelPage</title>
    <routine_idx> ../method.htm </routine_idx>

    <description>
        <para>
        	Allocates a kernel page.
        </para>
    </description>

    <syntax>
        <return_val>virtaddr_t</return_val>
        <NoArguments/>
    </syntax>

    <return>
    	<table>
            <th>
                <td>Return Value</td><td>Description</td>
            </th>
            <tr>
                <td>0</td>
                <td>Allocation fails; insufficient memory</td>
            </tr>
            <tr>
                <td>Non-zero value</td>
                <td>Allocation successful, returns the starting address (virtual address) of kernel page</td>
            </tr>
        </table>
    </return>

    <remarks>
    	<para>
    		This method is used to allocate a kernel page. Once a kernel page is successfully allocated, kernel 
    		driver can access it directly.
    	</para>
    </remarks>

    <requirements>
        <system>
            <system_name>
                Elastos 2.0 or later
            </system_name>
        </system>
        <headerfile>
            <file_name>ddk.h</file_name>
        </headerfile>
    </requirements>

    <references>
        <reference>
            <ref_name>FreeKernelPage</ref_name>
            <ref_url>FreeKernelPage</ref_url>
        </reference>
        <reference>
            <ref_name>FreeKernelPages</ref_name>
            <ref_url>FreeKernelPages</ref_url>
        </reference>
        <reference>
            <ref_name>AllocKernelPages</ref_name>
            <ref_url>AllocKernelPages</ref_url>
        </reference>
    </references>
</manpage>
