<manpage>
    <sample url="practical_routines\DebugBreak">DebugBreak</sample>
    <volume>Practical Routines</volume>
    <title>DebugBreak</title>
    <routine_idx> ../practical_routines.htm </routine_idx>

    <description>
        <para>
        	Causes a breakpoint exception to occur in the current process, and sets the kernel to debug mode.
        </para>
    </description>

    <syntax>
        <return_val>void</return_val>
        <NoArguments/>
    </syntax>

    <return>
    	<NoReturnValue/>
    </return>

    <remarks>
        <para>
        	This function causes a breakpoint exception to occur in the current process, and sets the kernel 
        	to debug mode.
        </para>
    </remarks>

    <requirements>
        <system>
            <system_name>
                Elastos 2.0 or later. 
            </system_name>
        </system>
        <headerfile>
            <file_name> ddk.h </file_name>
        </headerfile>
    </requirements>

</manpage>
