<manpage>
    <sample url="thread\RestorePreemption">RestorePreemption</sample>
    <volume>Thread and Scheduling</volume>
    <title>RestorePreemption</title>
    <routine_idx> ../../thread.htm </routine_idx>

    <description>
        <para>Restores the preemption state of the operating system.</para>
    </description>

    <syntax>
        <return_val>void</return_val>
        <parameters>
            <api_param>
                <param_type> bool_t</param_type>
                <param_name> bPreemption </param_name>
                <param_note>
                    <para>
                    	Enbales the preemption of the operating system, if bPreemption is TRUE. Otherwise, disables
                     	the preemption of the operating system.
                     </para>
                </param_note>
            </api_param>
        </parameters>
    </syntax>

    <return>
    	<para>None</para>
    </return>

    <remarks>
        <para>
        	Restores the preemption state of the operating system. Usually, before you call this function, you should 
        	disable the preemption by calling the <link url="DisablePreemption.htm">DisablePreemption</link> function. 
        	If the preemption is not disabled, the behavior of the function is undefined.
        </para>
    </remarks>

    <requirements>
        <system>
            <system_name>
                Elastos 2.0 or later.
            </system_name>
        </system>
        <headerfile>
            <file_name> ddk.h </file_name>
        </headerfile>
    </requirements>

    <references>
        <reference>
            <ref_name>DisablePreemption</ref_name>
            <ref_url>DisablePreemption</ref_url>
        </reference>
    </references>


</manpage>
