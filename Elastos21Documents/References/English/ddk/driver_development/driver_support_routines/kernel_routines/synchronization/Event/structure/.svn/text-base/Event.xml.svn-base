    <?xml version = "1.0" encoding="GB2312" ?>
    <?xml:stylesheet type="text/xsl" href="/xsl/xsl_e/structuremanual.xsl"?><manpage>
<volume>Synchronization</volume>
<class>Event</class><function>Event(bool_t bManualReset, uint_t uState)</function>
    <description>
        <para>
            Event class constructor is used to create Event object.
        </para>
    </description>
    <syntax>
        <apiname>Event</apiname>
        <parameters>
            <api_param>
                <param_type> bool_t </param_type>
                <param_name> bManualReset </param_name>
                <param_note>
                    <para>
                        Specifies the mode of the Event object. If TRUE, it is manual reset Event object and if FALSE,
                        it is auto reset Event object.
                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_type> uint_t</param_type>
                <param_name> uState </param_name>
                <param_note>
                    <para>
                        Specifies the initial state of the created event object.
                    </para>
                </param_note>
            </api_param>
        </parameters>
    </syntax>

    <remarks>
        <para>
            Uses Event constructor to construct an Event object. The arguments specify the mode and the initial state 
	    	of the object.        
	    </para>
    </remarks>

    <requirements>
        <system>
            <system_name>
                Elastos 2.0 or later
            </system_name>
        </system>
    </requirements>
</manpage>
