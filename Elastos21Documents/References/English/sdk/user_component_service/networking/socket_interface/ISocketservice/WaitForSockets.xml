    <?xml version = "1.0" encoding="GB2312" ?>
    <?xml:stylesheet type="text/xsl" href="/xsl/xsl_e/methodmanual.xsl"?><manpage>
<volume>Socket Interface </volume>
<interface>ISocketservice</interface><method> WaitForSockets </method>
    <description>
        <para>
        轮询不同socket接口，等待请求的事件发生
        </para>
    </description>
    <syntax>
        <return_val> ECODE </return_val>
       <parameters>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> ISocket ** </param_type>
                <param_name> ppSockets </param_name>
                <param_note>
                    <para>
						ISocket接口指针数组首地址。
                    </para>
                </param_note>
            </api_param>
        </parameters>
       <parameters>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> BYTE *  </param_type>
                <param_name> pEventRequests </param_name>
                <param_note>
                    <para>
						请求方式数组，元数与ISocket接口指针数组一一对应。
                    </para>
                </param_note>
            </api_param>
        </parameters>
        <parameters>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> UINT32  </param_type>
                <param_name> numberSockets </param_name>
                <param_note>
                    <para>
						ISocket接口数组元素个数。
                    </para>
                </param_note>
            </api_param>
        </parameters>
        <parameters>
            <api_param>
                <param_inout>[in]</param_inout>
                <param_type> LONG  </param_type>
                <param_name> timeout </param_name>
                <param_note>
                    <para>
						等待超时时间。
                    </para>
                </param_note>
            </api_param>
        </parameters>
    </syntax>

	<return>
	<table>
	    <th>
		<td>Returns </td>
		<td>Value</td>
		<td>Description</td>
	    </th>
	    <tr>
		<td>S_OK</td>
		<td>0x00000000</td>
		<td>方法调用成功。 </td>
	    </tr>
	    <tr>
		<td>S_TIMED_OUT</td>
		<td>0x00060003</td>
		<td>超时返回</td>
	    </tr>
	</table>
    </return>

	<remarks>
		<para>
		</para>
	</remarks>

    <requirements>
        <system>
            <system_name>
				Windows 2000 或更高版本; 《和欣2.0》或更高版本
			</system_name>
        </system>
    </requirements>
</manpage>