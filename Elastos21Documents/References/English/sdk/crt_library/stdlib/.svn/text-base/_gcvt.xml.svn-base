<?xml version="1.0" encoding="GB2312"?>
<?xml:stylesheet type="text/xsl" href="/xsl/xsl_e/manual.xsl"?>

<manpage>
    <sample url="sdk\operating_system\crt\libc\stdlib\_gcvt">_gcvt</sample>
    <title>_gcvt</title>
    <volume>C Run-Time Library</volume>
    <routine_idx>slib_idx.htm</routine_idx>

    <description>
        <para>Converts a floating-point value to a string</para>
    </description>

    <syntax>
        <return_val>char * </return_val>
        <func_name>_gcvt</func_name>
        <parameters>
            <func_param>
                <param_type>double</param_type>
                <param_name>vaule</param_name>
                <param_note>
                    <para>Value to be converted.</para>
                </param_note>
            </func_param>
            <func_param>
                <param_type>int</param_type>
                <param_name>digits</param_name>
                <param_note>
                    <para>Number of significant digits stored</para> 
                </param_note>
            </func_param>
            <func_param>
                <param_type>char *</param_type>
                <param_name>buffer</param_name>
                <param_note>
                    <para>Storage location for the result</para>
                </param_note>
            </func_param>
        </parameters>
    </syntax>

    <return></return>

    <remarks></remarks>

    <requirements>
        <routine>
            <routine_name>_gcvt</routine_name>
            <headerfile>stdlib.h</headerfile>
            <compatibility>Windows 2000, Elastos 2.0 </compatibility>
        </routine>
    </requirements>

    <example></example>

</manpage>