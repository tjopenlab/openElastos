<manpage>
    <sample url="sdk\operating_system\crt\libc\direct\_getdrive">_getdrive</sample>
    <title>_getdrive </title>
    <volume>C Run-Time Library</volume>
    <routine_idx> dir_idx.htm </routine_idx>

    <description>
        <para>Gets the current disk drive.</para>
    </description>

    <syntax>
        <return_val>int</return_val>
        <func_name>_getdrive</func_name>
        <parameters>
            <func_param>
                <param_type>void</param_type>
            </func_param>
        </parameters>
    </syntax>
  
    <return>
        <para>Returns the current (default) drive (1=A, 2=B, and so on). There is no error return.</para>
    </return>
    <requirements>
        <routine>
            <routine_name>_chdrive</routine_name>
            <headerfile>direct.h</headerfile>
            <compatibility>Windows 2000, Elastos 2.0</compatibility>
        </routine>
        <routine>
            <routine_name>_getcwd</routine_name>
            <headerfile>direct.h</headerfile>
            <compatibility>Windows 2000, Elastos 2.0</compatibility>
        </routine>
        <routine>
            <routine_name>_getdcwd</routine_name>
            <headerfile>direct.h</headerfile>
            <compatibility>Windows 2000, Elastos 2.0</compatibility>
        </routine>
    </requirements>

    <example></example>



</manpage>