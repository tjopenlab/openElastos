<manpage>
    <sample url="system_lib\EzCreateObject">EzCreateObject</sample>
    <volume>Memory Management</volume>
    <title>CVirtualMemory::Alloc</title>
    <routine_idx>...\mem_management_idx.htm</routine_idx>

    <description>
        <para>
        Allocates a block of virtual memory. 
        </para>
    </description>

    <syntax>
        <return_val>ECode  </return_val>
        <api_name>CVirtualMemory::Alloc</api_name>
       <parameters>
            <api_param>
                <param_type> Address </param_type>
                <param_name> baseAddr</param_name>
                <param_note>
                    <para>
                    	[in] Starting address of the virtual memory block to be allocated.
                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_type> MemorySize </param_type>
                <param_name>size </param_name>
                <param_note>
                    <para>
                    	[in] Size, in bytes, of the virtual memory block to be allocated
                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_type> MemoryMap</param_type>
                <param_name> flags </param_name>
                <param_note>
                    <para>
                    	[in] Optional flag for virtual memory mapping. See <link url="\sdk\base_service\data structer\MemoryMap.html">MemoryMap</link> related help for more details.
                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_type>MemoryProtection </param_type>
                <param_name>protection</param_name>
                <param_note>
                    <para>
                    	[in] Specifies the type of virtual memory access protection.See <link url="\sdk\base_service\data structer\MemoryProtection.html">MemoryProtection</link> related help for more details.
                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_type>Address *</param_type>
                <param_name>pBaseAddr</param_name>
                <param_note>
                    <para>
                    	[out] The base address of the allocated virtual memory block, if the function succeeds
                    </para>
                </param_note>
            </api_param>
      </parameters>      
    </syntax>

    <return>
       <table>
            <th>
                <td>Return Value</td><td>Description</td>
            </th>
            <tr>
                <td>NOERROR</td>
                <td>Funtion succeeds in  allocating a block of virtual memory.</td>
            </tr>
            
            <tr>
                <td>E_INVALIDARG</td>
                <td>Invalid argument(s)</td>
            </tr>
            <tr>
                <td>E_ALREADY_EXISTS </td>
                <td>The name of the service  already registered</td>
            </tr>
           <tr>
                <td>E_DOES_NOT_EXIST </td>
                <td>The service dosen't exist</td>
            </tr>
            <tr>
                <td>E_OUT_OF_MEMORY </td>
                <td>Out of memory</td>
            </tr>
        </table>
        <para>See <link url="/sdk/reference/basic_data_type/hresult.htm">ECODE</link> related help for more details.</para>
    </return>   	


    <remarks>
         <para>
         </para>
    </remarks>

    <requirements>
        <system>
            <system_name>
                Windows 2000 or later; Elastos 2.0 or later.
            </system_name>
        </system>
        <headerfile>
            <file_name> elastos.h </file_name>
        </headerfile>
        <library>
            <lib_name> elastos.lib </lib_name>
        </library>
    </requirements>

</manpage>
