<manpage>
    <sample url="system_lib\_CSystem_CreateSystemEventHandle">_CSystem_CreateSystemEventHandle</sample>
    <volume>System API</volume>
    <title>_CSystem_CreateSystemEventHandle</title>
    <routine_idx> ..\system_api_idx.htm </routine_idx>

    <description>
        <para>
        	Requests a system event object.
        </para>
    </description>

    <syntax>
        <return_val>ECODE</return_val>
        <parameters>
            <api_param>
                <param_type> DWORD </param_type>
                <param_name> dwInterestedEvents </param_name>
                <param_note>
                    <para>
                    	[in] Specifies the required system event object.
                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_type> IEvent ** </param_type>
                <param_name> ppEvent </param_name>
                <param_note>
                    <para>
                    	[out] The pointer to the interface of the event object, if function succeeds.
                    </para>
                </param_note>
            </api_param>
        </parameters>
    </syntax>

    <return>    	
    	<table>
            <th>
                <td>Return Value</td><td>Description</td>
            </th>
            <tr>
                <td>S_OK</td>
                <td>Function succeeds in requesting a system event object.</td>
            </tr>
            <tr>
                <td>E_INVALIDARG</td>
                <td>Invalid argument(s)</td>
            </tr>
            <tr>
                <td>E_OUTOFMEMORY</td>
                <td>Insufficient memory</td>
            </tr>
        </table>
        <para>See <link url="/sdk/hresult.htm">ECODE</link> related help for more details.</para>
    </return>

    <remarks>
    </remarks>

    <requirements>
        <system>
            <system_name>
                Windows 2000 or later; Elastos 2.0 or later.
            </system_name>
        </system>
        <headerfile>
            <file_name> elastos.h </file_name>
        </headerfile>
        <library>
            <lib_name> elastos.lib </lib_name>
        </library>
    </requirements>


</manpage>
