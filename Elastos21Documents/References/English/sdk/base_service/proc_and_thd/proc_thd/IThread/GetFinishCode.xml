<?xml version = "1.0" encoding="GB2312" ?>
<?xml:stylesheet type="text/xsl" href="/xsl/xsl_e/methodmanual.xsl"?>
<manpage>
<volume>Process And Thread</volume>
<interface>IThread</interface><method> GetQuitCode </method>
    <description>
        <para>
            Gets the exit code (return value) of the thread.
        </para>
    </description>
    <syntax>
        <return_val> ECODE </return_val>
        <parameters>
            <api_param>
                <param_inout>[out]</param_inout>
                <param_type> QuitCode   </param_type>
                <param_name> pQuitCode  </param_name>
                <param_note>
                    <para>
						Pointer to the exit code for the thread.
                    </para>
                </param_note>
            </api_param>
        </parameters>
    </syntax>

	<return>
	<table>
	    <th>
		<td>Return Value</td>
		<td>Description</td>
	    </th>
	    <tr>
		<td>NOERROR</td>
		<td>Function succeeds in getting the exit code of the thread.</td>
	    </tr>
	    <tr>
		<td>E_INVALID_ARGUMENT</td>
		<td>Invalid argument(s).</td>
		</tr>
		<tr>
		<td>E_THREAD_NOT_STOPPED</td>
		<td>The thread is still running.</td>
	    </tr>
	</table>
	        <para>See <link url="../../hresult.htm">ECODE</link> related help for more details.</para>
    </return>

    <requirements>
        <system>
            <system_name>
				Elastos 2.0 or later.
			</system_name>
        </system>
    </requirements>
</manpage>