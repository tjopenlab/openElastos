    <?xml version = "1.0" encoding="GB2312" ?>
    <?xml:stylesheet type="text/xsl" href="/xsl/xsl_e/methodmanual.xsl"?><manpage>
<volume>System COM Interface </volume>
<interface>IReaderWriterLock</interface><method> IsReaderLockHeld </method>
    <description>
        <para>
         	Checks whether the thread has acquired the reader lock.
        </para>
    </description>
    <syntax>
        <return_val> ECODE </return_val>
    <parameters>
            <api_param>
                <param_inout>[out]</param_inout>
                <param_type> Boolean *</param_type>
                <param_name> pIsHeld </param_name>
                <param_note>
                    <para>
                    	 Interface pointer to the conditional variable object, if the function succeeds.
					</para>
                </param_note>
            </api_param>
        </parameters>
    </syntax>

	<return>
	<table>
	    <th>
		<td>Return Value </td>
		<td>Hex Value</td>
		<td>Description</td>
	    </th>
	    <tr>
		<td>NOERROR</td>
		<td>0x00000000</td>
		<td>Function succeeds. The calling thread has acquired the reader lock.</td>
	    </tr>
	    <tr>
	    <td>E_INVALID_ARGUMENT</td>
	    <td>0x00000001</td>
	    <td>Invalid argument(s).</td>
	    </tr>
	</table>
   <para>See <link url="..\..\..\..\reference\basic_data_type\hresult.htm">ECODE</link> for related help.</para> 
    </return>

	<remarks>
		<para>
			This function is used to determine whether the calling thread has acquired the reader 
			lock (ie., the ReaderWriterLock object as a reader).
		</para>
	</remarks>

    <requirements>
        <system>
            <system_name>
				Windows 2000 or later; Elastos 2.0 or later.
	    	</system_name>
        </system>
    </requirements>
</manpage>