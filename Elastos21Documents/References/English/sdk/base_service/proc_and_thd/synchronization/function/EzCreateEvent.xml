<manpage>
    <sample url="sdk\operating_system\system_com_interface\IEvent\TryWait">EzCreateEvent</sample>
    <volume>Synchronization</volume>
    <title>CEvent::New</title>
    <routine_idx> ..\..\synchronization.htm </routine_idx>

    <description>
        <para>
        	Creates an  object, enabling interprocess synchronization.
        </para>
    </description>

    <syntax>
        <return_val>ECODE</return_val>
        <parameters>
            <api_param>
                <param_type> Boolean </param_type>
                <param_name> manualReset </param_name>
                <param_note>
                    <para>
                    	[in]Specifies whether a manual-reset or auto-reset event object is created.
                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_type> EventState </param_type>
                <param_name> initialState </param_name>
                <param_note>
                    <para>
                    	[in]Specifies the initail state of the event created. Zero represents not acknowledged state, otherwise, it is acknowledged.
                    </para>
                </param_note>
            </api_param>
            <api_param>
                <param_type> IEvent ** </param_type>
                <param_name> ppEvent </param_name>
                <param_note>
                    <para>
						[out] Interface pointer to the event object, if the function succeeds.
					</para>
                </param_note>
            </api_param>
        </parameters>
    </syntax>

    <return>
    	<table>
            <th>
                <td>Return Value</td><td>Description</td>
            </th>
			<tr>
                <td>NOERROR</td>
                <td>Function succeeds in creating an <b>EzCreateEvent</b> object.</td>
            </tr>
            <tr>
                <td>E_INVALID_ARGUMENT</td>
                <td>Invalid argument(s)</td>
            </tr>
            <tr>
                <td>E_OUT_OF_MEMORY</td>
                <td>Insufficient memory</td>
            </tr>
        </table>
        <para>References <link url="/sdk/hresult.htm">ECODE </link> Correlative help</para>
    </return>

    <remarks>
        <para>See <link url="../IEvent.htm">IEvent</link> interface.</para>
    </remarks>

    <requirements>
        <system>
            <system_name>
                Windows 2000 or later; Elastos 2.0 or later
            </system_name>
        </system>
        <headerfile>
            <file_name> elastos.h </file_name>
        </headerfile>
        <library>
            <lib_name> elastos.lib </lib_name>
        </library>
    </requirements>


</manpage>
