<?xml version = "1.0" encoding="GB2312" ?>
<?xml:stylesheet type="text/xsl" href="/xsl/xsl_e/shellmanual.xsl"?>

<manpage>
    <title> Memtrace </title>
    <volume>Commands Supported by Shell</volume>

    <description>
        <para> Monitors if there is memory leak while running application.</para>
    </description>

    <syntax>
        <cmd_name> memtrace </cmd_name>
        <cmd_param>[-d] [index=] address= [ProgramName] ProgramArgument</cmd_param>
    </syntax>
    <syntax>
        <cmd_name> memtrace </cmd_name>
        <cmd_param>[-v] [ProgramName] ProgramArgument</cmd_param>
    </syntax>
    <parameters>
        <param>
            <param_name>  [-d] </param_name>
            <param_note> Debug the program when memory leak is detected.</param_note>
        </param>
        <param>
            <param_name> [-v] </param_name>
            <param_note> 
            	Detailed report about memory leak situation along with call stack information.
            </param_note>
        </param>
        <param>
            <param_name>[ProgramName]</param_name>
            <param_note>Application name</param_note>
        </param>
        <param>
            <param_name>[index=]</param_name>
            <param_note>Index number</param_note>
        </param>
        <param>
            <param_name>address=</param_name>
            <param_note>Memory address</param_note>
        </param>
    </parameters>

</manpage>