<?xml version = "1.0" encoding="GB2312" ?>
<?xml:stylesheet type="text/xsl" href="/xsl/xsl_e/shellmanual.xsl"?>

<manpage>
    <title> route </title>
    <volume>Networking Commands</volume>

    <description>
        <para> Configures default gateway or router.</para>
    </description>

    <syntax>
        <cmd_name> route.exe</cmd_name>
        <cmd_param>[add|delete|change][address]</cmd_param>
    </syntax>

    <parameters>
        <param>
            <param_name>[add|delete|change]</param_name>
            <param_note>Add, delete or change a gateway or router.</param_note>
        </param>
        <param>
            <param_name>[address]</param_name>
            <param_note>Gateway</param_note>
        </param>
    </parameters>

    <examples>
        <example>
            <eg_line>route.exe add default 192.168.0.1</eg_line>
            <eg_note>Adding default gateway.</eg_note>
        </example>
    </examples>

</manpage>