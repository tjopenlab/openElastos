<?xml version = "1.0" encoding="GB2312" ?>
<?xml:stylesheet type="text/xsl" href="/xsl/xsl_c/shellmanual.xsl"?>

<manpage>
    <title> ping </title>
    <volume>Network Commands</volume>

    <description>
        <para> Checks if the target host is reachable.</para>
    </description>

    <syntax>
        <cmd_name> ping </cmd_name>
        <cmd_param>[host-ip | host_domain_name] </cmd_param>
    </syntax>

    <parameters>
        <param>
            <param_name> [host-ip | host_domain_name]</param_name>
            <param_note> Host IP address or host name. </param_note>
        
    </parameters>

    <examples>
        <example>
            <eg_line>ping 192.168.0.1</eg_line>
        </example>
        <example>
            <eg_line>ping www.google.com</eg_line>
        </example>
    </examples>

</manpage>