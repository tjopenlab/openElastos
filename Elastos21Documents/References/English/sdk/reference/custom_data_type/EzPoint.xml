<?xml version = "1.0" encoding = "GB2312"?>
<?xml:stylesheet type = "text/xsl" href = "/xsl/xsl_e/interfaceman.xsl"?>

<manpage>
    <volume> Common Data Structure </volume>
    <interface> EzPoint </interface>

    <description>
        <para> It is used to define a two dimensional point. </para>
    </description>

    <constructs>
        <construct>
            <construct_name> EzPoint </construct_name>
            <construct_url> EzPoint/structure/EzPoint </construct_url>
            <construct_description> Constructs an EzPoint object. </construct_description>
        </construct>
    </constructs>

    <methods>
        <self>
        <method>
        <method_name> GetX </method_name>
        <method_url> EzPoint/GetX </method_url>
        <m_description> Gets the point's X-axis co-ordinate.  </m_description>
        </method>
        <method>
        <method_name> GetY </method_name>
        <method_url> EzPoint/GetY </method_url>
        <m_description> Gets the point's Y-axis co-ordinate. </m_description>
        </method>
        <method>
        <method_name> SetX </method_name>
        <method_url> EzPoint/SetX </method_url>
        <m_description> Sets the point's X-axis co-ordinate. </m_description>
        </method>
        <method>
        <method_name> SetY </method_name>
        <method_url> EzPoint/SetY </method_url>
        <m_description> Sets the point's Y-axis co-ordinate. </m_description>
        </method>
    </self>
    </methods>

    <operators>
        <operator>
            <operator_name> operator = </operator_name>
            <operator_url> EzPoint/operator </operator_url>
            <operator_description> Sets the value of an EzPoint object. </operator_description>
        </operator>
    </operators>

    <requirements>
        <system>
            <system_name>
                Windows 2000 or later; Elastos 2.0 or later
            </system_name>
        </system>
        <headerfile>
            <file_name> ezpoint.h </file_name>
        </headerfile>
        <library>
            <lib_name> elastos.lib </lib_name>
        </library>
    </requirements>

    <remarks>
         <para>
            You must not operate on the value of an EzPoint object's x and y axis co-ordinate directly.These operations must be achieved through calling member functions such as <b>SetX</b>, <b>GetY</b>, etc.
        </para>
    </remarks>

</manpage>