<?xml version = "1.0" encoding="GB2312" ?>
<?xml:stylesheet type="text/xsl" href="/xsl/xsl_e/shellmanual.xsl"?>

<manpage>
    <title> sleep </title>
    <volume>Common Elastos Tools</volume>

    <description>
        <para> Makes the system wait for a couple of seconds.</para>
    </description>

    <syntax>
        <cmd_name> SLEEP </cmd_name>
        <cmd_param> [-?][time-to-sleep-in-seconds] </cmd_param>
    </syntax>
    <parameters>
        <param>
            <param_name>  -?  </param_name>
            <param_note> Displays help information</param_note>
        </param>
        <param>
            <param_name> time-to-sleep-in-seconds </param_name>
            <param_note> Amount of system sleep time specified in number of seconds</param_note>
        </param>
    </parameters>
    <examples>
        <example>
            <eg_line>sleep 10  </eg_line>
            <eg_note> The system waits for 10 seconds, during which time the system does not do anying.</eg_note>
        </example>
    </examples>

</manpage>