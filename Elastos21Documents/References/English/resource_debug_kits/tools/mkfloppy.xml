<?xml version = "1.0" encoding="GB2312" ?>
<?xml:stylesheet type="text/xsl" href="/xsl/xsl_e/shellmanual.xsl"?>

<manpage>
    <title> mkfloppy </title>
    <volume>Common Elastos Tools</volume>

    <description>
        <para>Makes GRUB installation floppy disk.</para>
    </description>

    <syntax>
        <cmd_name> MKFLOPPY </cmd_name>
        <cmd_param> [-? | -s | -m | -g | -i | -e] </cmd_param>
    </syntax>
    <parameters>
    <param>
        <param_name>  -? </param_name>
        <param_note> Displays help information </param_note>
    </param>
    <param>
        <param_name> -s </param_name>
        <param_note> Make GRUB install disk</param_note>
    </param>
    <param>
        <param_name> -m </param_name>
        <param_note> Make an empty disk</param_note>
    </param>
    <param>
        <param_name>-g  </param_name>
        <param_note> Shows disk geometry</param_note>
    </param>
    <param>
        <param_name> -i filename </param_name>
        <param_note> Make diskimage from a image file</param_note>
    </param>
    <param>
        <param_name> -e filename [size] </param_name>
        <param_note> Produce diskimage to a image file</param_note>
    </param>
    </parameters>

    <examples>
    <example>
        <eg_line>mkfloppy -s  </eg_line>
        <eg_note> Make GRUB installation disk.</eg_note>
    </example>

    </examples>

</manpage>